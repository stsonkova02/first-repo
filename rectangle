using System;

namespace ConsoleApp6
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("a=");
            double a = double.Parse(Console.ReadLine());
            Console.Write("b=");
            double b = double.Parse(Console.ReadLine());
            double P = 2 * a + 2 * b;
            double S = a * b;
            double d = Math.Sqrt(a * a + b * b);
            Console.WriteLine(P);
            Console.WriteLine(S);
            Console.WriteLine(d);


        }
    }
}
